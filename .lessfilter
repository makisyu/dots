#!/bin/sh

case "$1" in
    *.md)
        pandoc -s -f markdown_github -t man "$1" | groff -T utf8 -m man -
        ;;
    *.rst)
        pandoc -s -f rst -t man "$1" | groff -T utf8 -m man -
        ;;
    *)
        src-hilite-lesspipe.sh "$1"
esac

# No further processing by lesspipe necessary
exit 0
